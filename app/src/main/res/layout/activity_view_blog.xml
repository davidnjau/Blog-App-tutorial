<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBlog">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/tvBlogName"
            android:text="Blog Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView"/>

        <TextView
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/tvBlogDescription"
            android:text="Blog Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:id="@+id/btnDeleteBlog"
            android:textAllCaps="false"
            android:text="Delete Blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:id="@+id/btnViewMoreBlogs"
            android:textAllCaps="false"
            android:text="View More Blogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</RelativeLayout>